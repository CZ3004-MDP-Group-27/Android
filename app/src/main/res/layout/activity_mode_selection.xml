<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modes.ModeSelectionActivity">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/status_default"
        android:textColor="@color/blue_jeans"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/mapModeBtn"
        android:layout_width="200dp"
        android:layout_height="275dp"
        android:layout_below="@id/statusText"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:onClick="onMapModeBtn"
        android:scaleType="fitCenter"
        android:src="@drawable/map_mode_button" />

    <ImageButton
        android:id="@+id/rcModeBtn"
        android:layout_width="200dp"
        android:layout_height="275dp"
        android:layout_below="@id/mapModeBtn"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/rc_mode_button"
        android:onClick="onRcModeBtn"/>

        <ImageButton
            android:id="@+id/fastestModeBtn"
            android:layout_width="200dp"
            android:layout_height="275dp"
            android:layout_below="@id/mapModeBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:background="@null"
            android:onClick="onFastestModeBtn"
            android:scaleType="fitCenter"
            android:src="@drawable/fastest_car_mode_button" />


</RelativeLayout>